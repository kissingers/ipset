<Window
    x:Class="myipset.CPing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="群Ping工具"
    Width="680"
    SizeChanged="Window_SizeChanged"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="Uniform">

        <Grid>
            <!--  定义行和列  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  上侧区域  -->
                <RowDefinition Height="*" />
                <!--  下侧区域  -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!--  下侧左侧区域  -->
                <ColumnDefinition Width="*" />
                <!--  下侧右侧区域  -->
            </Grid.ColumnDefinitions>

            <!--  上侧区域  -->

            <StackPanel
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="3,5,3,3"
                UseLayoutRounding="True">
                <Button
                    x:Name="ButtonStartPing"
                    Width="80"
                    Height="20"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="ButtonStartPing_Click"
                    Content="开始群ping"
                    UseLayoutRounding="True" />
                <TextBox
                    x:Name="TextBoxCping"
                    Width="130"
                    Height="20"
                    Margin="90,-20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="13"
                    UseLayoutRounding="True" />

                <TextBlock
                    Width="50"
                    Margin="230,-18,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Lime"
                    Text="&lt;10ms"
                    TextAlignment="Center"
                    UseLayoutRounding="True" />

                <TextBlock
                    Width="50"
                    Margin="285,-18,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Yellow"
                    Text="&lt;100ms"
                    TextAlignment="Center"
                    UseLayoutRounding="True" />

                <TextBlock
                    Width="50"
                    Margin="340,-18,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Orange"
                    Text="&lt;1秒"
                    TextAlignment="Center"
                    UseLayoutRounding="True" />

                <TextBlock
                    Width="50"
                    Margin="395,-18,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="OrangeRed"
                    Text="&gt;1秒"
                    TextAlignment="Center"
                    UseLayoutRounding="True" />

                <TextBlock
                    Width="50"
                    Margin="450,-18,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Fuchsia"
                    Text=" 禁ping"
                    TextAlignment="Center"
                    UseLayoutRounding="True" />
                <Button
                    x:Name="ButtonSaveMac"
                    Width="100"
                    Height="20"
                    Margin="524,-20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Click="ButtonSaveMac_Click"
                    Content="保存IP/MAC表"
                    UseLayoutRounding="True" />
            </StackPanel>

            <!--  下侧左侧区域  -->

            <!--  左侧：16×16 IP 网格  -->
            <ItemsControl
                x:Name="ItemsControlCping"
                Grid.Row="1"
                Grid.Column="0"
                Margin="3,3,3,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                UseLayoutRounding="True">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid
                            Columns="16"
                            Rows="16"
                            UseLayoutRounding="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="1"
                            Background="{Binding Color}"
                            BorderBrush="Gainsboro"
                            BorderThickness="1"
                            ToolTip="{Binding ToolTip}"
                            UseLayoutRounding="True">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding DisplayIP}"
                                UseLayoutRounding="True" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  下侧右侧区域  -->

            <DataGrid
                x:Name="DataGridMAC"
                Grid.Row="1"
                Grid.Column="1"
                Width="235"
                Height="294"
                Margin="3,3,3,3"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserResizeColumns="False"
                HeadersVisibility="Column"
                HorizontalScrollBarVisibility="Hidden"
                IsReadOnly="True"
                UseLayoutRounding="True"
                VerticalScrollBarVisibility="Visible">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding FullIP}"
                        Header="IP" />
                    <DataGridTextColumn
                        Width="116"
                        Binding="{Binding MAC}"
                        Header="MAC" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Viewbox>
</Window>