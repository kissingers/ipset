<Window
    x:Class="ipset.EditSchemeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="编辑IP方案"
    Width="300"
    Height="356"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="Uniform">
        <Grid Margin="10,10,10,5" UseLayoutRounding="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  方案名称  -->
                <RowDefinition Height="Auto" />
                <!--  IP 地址  -->
                <RowDefinition Height="Auto" />
                <!--  掩码  -->
                <RowDefinition Height="Auto" />
                <!--  网关  -->
                <RowDefinition Height="Auto" />
                <!--  DNS1  -->
                <RowDefinition Height="Auto" />
                <!--  DNS2  -->
                <RowDefinition Height="Auto" />
                <!--  启用第二IP  -->
                <RowDefinition Height="Auto" />
                <!--  Panel_SecondIP  -->
                <RowDefinition Height="Auto" />
                <!--  按钮  -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  方案名称  -->
            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="方案名称:"
                UseLayoutRounding="True" />
            <TextBox
                x:Name="TextBox_SchemeName"
                Grid.Row="0"
                Grid.Column="1"
                Margin="5"
                UseLayoutRounding="True" />

            <!--  IP 地址  -->
            <Label
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="IP 地址:"
                UseLayoutRounding="True" />
            <TextBox
                x:Name="TextBox_IP1"
                Grid.Row="1"
                Grid.Column="1"
                Margin="5"
                UseLayoutRounding="True" />

            <!--  掩码  -->
            <Label
                Grid.Row="2"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="掩码:"
                UseLayoutRounding="True" />
            <TextBox
                x:Name="TextBox_Mask1"
                Grid.Row="2"
                Grid.Column="1"
                Margin="5"
                UseLayoutRounding="True" />

            <!--  网关  -->
            <Label
                Grid.Row="3"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="网关:"
                UseLayoutRounding="True" />
            <TextBox
                x:Name="TextBox_Gateway"
                Grid.Row="3"
                Grid.Column="1"
                Margin="5"
                UseLayoutRounding="True" />

            <!--  DNS1  -->
            <Label
                Grid.Row="4"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="DNS1:"
                UseLayoutRounding="True" />
            <TextBox
                x:Name="TextBox_DNS1"
                Grid.Row="4"
                Grid.Column="1"
                Margin="5"
                UseLayoutRounding="True" />

            <!--  DNS2  -->
            <Label
                Grid.Row="5"
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="DNS2:"
                UseLayoutRounding="True" />
            <TextBox
                x:Name="TextBox_DNS2"
                Grid.Row="5"
                Grid.Column="1"
                Margin="5"
                UseLayoutRounding="True" />

            <!--  启用第二IP  -->
            <Label
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,5,0,0"
                VerticalAlignment="Center"
                Content="启用第二IP:"
                UseLayoutRounding="True" />
            <CheckBox
                x:Name="CheckBox_Enable2IP"
                Grid.Row="6"
                Grid.Column="1"
                Margin="5,10,5,5"
                Checked="CheckBox_Enable2IP_Checked"
                Unchecked="CheckBox_Enable2IP_Unchecked"
                UseLayoutRounding="True" />

            <!--  Panel_SecondIP：包含第二IP和第二掩码  -->
            <Grid
                x:Name="Panel_SecondIP"
                Grid.Row="7"
                Grid.ColumnSpan="2"
                Margin="5"
                UseLayoutRounding="True"
                Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  第二IP 地址  -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="第二IP 地址:"
                    UseLayoutRounding="True" />
                <TextBox
                    x:Name="TextBox_IP2"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    UseLayoutRounding="True" />

                <!--  第二掩码  -->
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="第二掩码:"
                    UseLayoutRounding="True" />
                <TextBox
                    x:Name="TextBox_Mask2"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    UseLayoutRounding="True" />
            </Grid>

            <!--  按钮  -->
            <StackPanel
                Grid.Row="8"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                UseLayoutRounding="True">
                <Button
                    Width="100"
                    Margin="0,15,0,0"
                    Click="Button_Save_Click"
                    Content="保存"
                    UseLayoutRounding="True" />
                <Button
                    Width="25"
                    Margin="0,10,0,0"
                    UseLayoutRounding="True"
                    Visibility="Hidden" />
                <Button
                    Width="100"
                    Margin="0,15,0,0"
                    Click="Button_Cancel_Click"
                    Content="取消"
                    UseLayoutRounding="True" />
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>