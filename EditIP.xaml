<Window x:Class="ipset.EditSchemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑IP方案" Height="356" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10,10,10,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 方案名称 -->
            <RowDefinition Height="Auto"/>
            <!-- IP 地址 -->
            <RowDefinition Height="Auto"/>
            <!-- 掩码 -->
            <RowDefinition Height="Auto"/>
            <!-- 网关 -->
            <RowDefinition Height="Auto"/>
            <!-- DNS1 -->
            <RowDefinition Height="Auto"/>
            <!-- DNS2 -->
            <RowDefinition Height="Auto"/>
            <!-- 启用第二IP -->
            <RowDefinition Height="Auto"/>
            <!-- Panel_SecondIP -->
            <RowDefinition Height="Auto"/>
            <!-- 按钮 -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 方案名称 -->
        <Label Grid.Row="0" Grid.Column="0" Content="方案名称:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox_SchemeName" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- IP 地址 -->
        <Label Grid.Row="1" Grid.Column="0" Content="IP 地址:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox_IP1" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <!-- 掩码 -->
        <Label Grid.Row="2" Grid.Column="0" Content="掩码:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox_Mask1" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <!-- 网关 -->
        <Label Grid.Row="3" Grid.Column="0" Content="网关:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox_Gateway" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <!-- DNS1 -->
        <Label Grid.Row="4" Grid.Column="0" Content="DNS1:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox_DNS1" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <!-- DNS2 -->
        <Label Grid.Row="5" Grid.Column="0" Content="DNS2:" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBox_DNS2" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <!-- 启用第二IP -->
        <Label Grid.Row="6" Grid.Column="0" Content="启用第二IP:" VerticalAlignment="Center" Margin="0,5,0,0"/>
        <CheckBox x:Name="CheckBox_Enable2IP" Grid.Row="6" Grid.Column="1" Margin="5,10,5,5"
              Checked="CheckBox_Enable2IP_Checked" Unchecked="CheckBox_Enable2IP_Unchecked"/>

        <!-- Panel_SecondIP：包含第二IP和第二掩码 -->
        <Grid x:Name="Panel_SecondIP" Grid.Row="7" Grid.ColumnSpan="2" Margin="5" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 第二IP 地址 -->
            <Label Grid.Row="0" Grid.Column="0" Content="第二IP 地址:" VerticalAlignment="Center"/>
            <TextBox x:Name="TextBox_IP2" Grid.Row="0" Grid.Column="1" Margin="5"/>

            <!-- 第二掩码 -->
            <Label Grid.Row="1" Grid.Column="0" Content="第二掩码:" VerticalAlignment="Center"/>
            <TextBox x:Name="TextBox_Mask2" Grid.Row="1" Grid.Column="1" Margin="5"/>
        </Grid>

        <!-- 按钮 -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="保存" Width="100" Click="Button_Save_Click" Margin="0,15,0,0"/>
            <Button  Width="25" Margin="0,10,0,0" Visibility="Hidden" />
            <Button Content="取消" Width="100" Click="Button_Cancel_Click" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
