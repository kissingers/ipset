<Window x:Class="ipset.EditSchemeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑IP方案" Height="500" Width="300" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="方案名称" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBox_SchemeName" Margin="0,0,0,10"/>

            <TextBlock Text="IP 地址" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBox_IP1" Margin="0,0,0,10"/>

            <TextBlock Text="掩码" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBox_Mask1" Margin="0,0,0,10"/>

            <TextBlock Text="网关" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBox_Gateway" Margin="0,0,0,10"/>

            <TextBlock Text="DNS1" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBox_DNS1" Margin="0,0,0,10"/>

            <TextBlock Text="DNS2" Margin="0,0,0,5"/>
            <TextBox x:Name="TextBox_DNS2" Margin="0,0,0,10"/>

            <!-- 第二IP部分 -->
            <CheckBox x:Name="CheckBox_Enable2IP" Content="启用第二IP" Margin="0,0,0,10" 
                      Checked="CheckBox_Enable2IP_Checked" Unchecked="CheckBox_Enable2IP_Unchecked"/>
            <StackPanel x:Name="Panel_SecondIP" Visibility="Collapsed">
                <TextBlock Text="第二IP 地址" Margin="0,0,0,5"/>
                <TextBox x:Name="TextBox_IP2" Margin="0,0,0,10"/>
                <TextBlock Text="第二掩码" Margin="0,0,0,5"/>
                <TextBox x:Name="TextBox_Mask2" Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="保存" Width="75" Margin="0,0,5,0" Click="Button_Save_Click"/>
                <Button Content="取消" Width="75" Click="Button_Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
