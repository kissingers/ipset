<Window
    x:Class="ipset.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="IP修改器"
    Width="860"
    SizeChanged="Window_SizeChanged"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Viewbox
        x:Name="MainViewbox"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Stretch="Uniform">
        <!--  指定 Grid 的设计尺寸  -->
        <Grid
            x:Name="MainGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <!--  定义二列布局  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="440" />
                <ColumnDefinition Width="420" />
            </Grid.ColumnDefinitions>

            <!--  左侧区域  -->
            <Grid Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="125" />
                    <!--  左上区域  -->
                    <RowDefinition Height="*" />
                    <!--  左下区域  -->
                </Grid.RowDefinitions>

                <!--  左上区域：网卡设置和CPing工具  -->
                <Grid
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    Margin="0,0,0,390"
                    HorizontalAlignment="Left">
                    <CheckBox
                        x:Name="CheckBox_VirtualCard"
                        Height="25"
                        Margin="0,2,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Checked="CheckBox_VirtualCard_Checked"
                        Content="显示虚拟网卡："
                        Unchecked="CheckBox_VirtualCard_Unchecked"
                        UseLayoutRounding="True" />

                    <StackPanel Margin="5,20,0,0">
                        <Label
                            x:Name="Lable_NetCard"
                            Width="70"
                            Height="25"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="选择网卡："
                            UseLayoutRounding="True" />
                        <ComboBox
                            x:Name="ComboBox_NetCard"
                            Width="110"
                            Height="25"
                            Margin="70,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            IsEditable="True"
                            SelectionChanged="ComboBox_NetCard_SelectionChanged"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Button_TurnCardOnOff"
                            Width="70"
                            Height="25"
                            Margin="195,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Button_TurnCardOnOff_Click"
                            Content="停用"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Button_ChangeCardName"
                            Width="70"
                            Height="25"
                            Margin="275,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Button_ChangeCardName_Click"
                            Content="网卡改名"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Button_FindRouting"
                            Width="70"
                            Height="25"
                            Margin="355,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Button_FindRouting_Click"
                            Content="查路由"
                            UseLayoutRounding="True" />

                        <Label
                            x:Name="Lable_MAC"
                            Width="70"
                            Height="25"
                            Margin="0,7,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="当前MAC:"
                            UseLayoutRounding="True" />
                        <TextBox
                            x:Name="TextBox_MAC"
                            Width="110"
                            Height="25"
                            Margin="70,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="FFFFFFFFFFFF"
                            TextWrapping="Wrap"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Botton_RandomMAC"
                            Width="70"
                            Height="25"
                            Margin="195,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Botton_RandomMAC_Click"
                            Content="随机MAC"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Botton_ManualMAC"
                            Width="70"
                            Height="25"
                            Margin="275,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Botton_ManualMAC_Click"
                            Content="手动MAC"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Botton_DefaultMAC"
                            Width="70"
                            Height="25"
                            Margin="355,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Botton_DefaultMAC_Click"
                            Content="恢复MAC"
                            UseLayoutRounding="True" />

                        <Label
                            x:Name="Lable_MTU"
                            Width="70"
                            Height="25"
                            Margin="0,7,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="当前MTU:"
                            UseLayoutRounding="True" />
                        <TextBox
                            x:Name="TextBox_MTU"
                            Width="110"
                            Height="25"
                            Margin="70,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="1500"
                            TextWrapping="Wrap"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Botton_ManualMTU"
                            Width="70"
                            Height="25"
                            Margin="195,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Botton_ManualMTU_Click"
                            Content="手动MTU"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Botton_DefaultMTU"
                            Width="70"
                            Height="25"
                            Margin="275,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Click="Botton_DefaultMTU_Click"
                            Content="默认MTU"
                            UseLayoutRounding="True" />
                        <Button
                            x:Name="Botton_Cping"
                            Width="70"
                            Height="25"
                            Margin="355,-25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#FF11F309"
                            Click="Botton_Cping_Click"
                            Content="Cping工具"
                            UseLayoutRounding="True" />
                    </StackPanel>
                </Grid>

                <!--  左中区域：IP配置和方案列表  -->
                <Grid
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="170*" />
                            <ColumnDefinition Width="31*" />
                        </Grid.ColumnDefinitions>

                        <!--  IP设置组  -->
                        <StackPanel Grid.ColumnSpan="2" Margin="5,0,0,0">
                            <CheckBox
                                x:Name="CheckBox_DHCP"
                                Height="25"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Checked="CheckBox_DHCP_Checked"
                                Content="自动获取IP地址："
                                Unchecked="CheckBox_DHCP_Unchecked"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_IP1"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="IP地址1:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_IP1"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="111.111.111.111"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_Mask1"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="IP掩码1:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_Mask1"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="255.255.255.0"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_GateWay"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="IP网关:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_GateWay"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="111.111.111.254"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_DNS1"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="首选DNS:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_DNS1"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="114.114.114.114"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_DNS2"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="备用DNS:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_DNS2"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="119.29.29.29"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />
                        </StackPanel>

                        <!--  IP2设置组  -->
                        <StackPanel Grid.ColumnSpan="2" Margin="5,210,0,0">
                            <CheckBox
                                x:Name="CheckBox_Enable2IP"
                                Height="25"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Checked="CheckBox_Enable2IP_Checked"
                                Content="启用第二个IP:"
                                Unchecked="CheckBox_Enable2IP_Unchecked"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_IP2"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="IP地址2:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_IP2"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="222.222.222.222"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />

                            <Label
                                x:Name="Lable_Mask2"
                                Width="70"
                                Height="25"
                                Margin="0,7,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="IP掩码2:"
                                UseLayoutRounding="True" />
                            <TextBox
                                x:Name="TextBox_Mask2"
                                Width="110"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Text="255.255.255.0"
                                TextWrapping="Wrap"
                                UseLayoutRounding="True" />
                        </StackPanel>

                        <!--  底部按钮  -->
                        <StackPanel Grid.ColumnSpan="2" Margin="5,320,0,0">
                            <Button
                                x:Name="Botton_RefreshConfig"
                                Width="80"
                                Height="25"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="Botton_RefreshConfig_Click"
                                Content="刷新网卡信息"
                                UseLayoutRounding="True" />
                            <Button
                                x:Name="Botton_ApplyConfig"
                                Width="80"
                                Height="25"
                                Margin="100,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="Botton_ApplyConfig_Click"
                                Content="应用当前配置"
                                UseLayoutRounding="True" />
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="174*" />
                            <RowDefinition Height="215*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.RowSpan="2">
                            <Button
                                x:Name="Botton_PreventIP"
                                Width="60"
                                Height="25"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="Botton_PreventIP_Click"
                                Content="前一次IP"
                                UseLayoutRounding="True" />
                            <Button
                                x:Name="Botton_NextIP"
                                Width="60"
                                Height="25"
                                Margin="70,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="Botton_NextIP_Click"
                                Content="后一次IP"
                                UseLayoutRounding="True" />
                            <Button
                                x:Name="Botton_SaveFangAn"
                                Width="90"
                                Height="25"
                                Margin="140,-25,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Click="Botton_SaveFangAn_Click"
                                Content="覆盖选中方案"
                                UseLayoutRounding="True" />
                        </StackPanel>

                        <!--  方案列表  -->
                        <ListBox
                            x:Name="ListBox_FangAn"
                            Grid.RowSpan="2"
                            Width="230"
                            Height="356"
                            Margin="0,32,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            SelectionChanged="ListBox_FangAn_SelectionChanged"
                            UseLayoutRounding="True">
                            <ListBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        Click="FanAn_MenuItem_Apply_Click"
                                        Header="应用"
                                        UseLayoutRounding="True" />
                                    <MenuItem
                                        Click="FanAn_MenuItem_Edit_Click"
                                        Header="编辑"
                                        UseLayoutRounding="True" />
                                    <MenuItem
                                        Click="FanAn_MenuItem_Refer_Click"
                                        Header="参考"
                                        UseLayoutRounding="True" />
                                    <MenuItem
                                        Click="FanAn_MenuItem_New_Click"
                                        Header="新建"
                                        UseLayoutRounding="True" />
                                    <MenuItem
                                        Click="FanAn_MenuItem_Delete_Click"
                                        Header="删除"
                                        UseLayoutRounding="True" />
                                </ContextMenu>
                            </ListBox.ContextMenu>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="ToolTip" Value="双击应用方案,右键更多管理功能" />
                                    <EventSetter Event="MouseDoubleClick" Handler="FanAn_MenuItem_Apply_Click" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Grid>
            </Grid>

            <!--  右侧区域：调试信息  -->
            <Grid Grid.Column="2">
                <Label
                    x:Name="Label_Message"
                    Height="25"
                    Margin="0,-3,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="调试信息:"
                    UseLayoutRounding="True" />

                <TextBox
                    x:Name="TextBox_Message"
                    Width="420"
                    Height="493"
                    Margin="0,20,0,2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    IsReadOnly="True"
                    UseLayoutRounding="True"
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </Grid>
    </Viewbox>
</Window>